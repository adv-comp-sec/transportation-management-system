<Page x:Class="TMS_DesktopApp.MarketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMS_DesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarketPage">

    <Grid>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="141,290,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="141,265,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="141,314,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="marketDBTable" Margin="10,10,10,225" >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Online Order?" IsThreeState="True" Binding="{Binding OnlineOrderFlag}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
