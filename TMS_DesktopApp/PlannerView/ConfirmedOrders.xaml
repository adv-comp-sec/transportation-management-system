<Page x:Class="TMS_DesktopApp.PlannerView.ConfirmedOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMS_DesktopApp.PlannerView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmedOrders">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height=".2*" />
        </Grid.RowDefinitions>
        <DataGrid CanUserAddRows="false"  AutoGenerateColumns="True" Grid.Column="0" x:Name="confirmedOrderTable" Margin="20,20,20,0">
        </DataGrid>
        <Button Grid.Row="1" x:Name="btn_CompleteTrip" Content="Complete Trip" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="37" Width="81" Margin="0,0,20,20" Click="btn_CompleteTrip_Click"/>
    </Grid>
</Page>
