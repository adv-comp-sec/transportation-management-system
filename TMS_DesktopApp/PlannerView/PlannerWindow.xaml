<Page x:Class="TMS_DesktopApp.PlannerView.PlannerWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMS_DesktopApp.PlannerView"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="PlannerWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20 50 20 20">
            <Button Content="Received Orders" Height="50" Margin="0,0,0,10" Click="Button_Click_1" />
            <Button Content="Confirmed Orders" Height="50" Margin="0,0,0,10" Click="Button_Click"/>
            <Button Content="Logout" Height="50" Margin="0,0,0,10"/>
        </StackPanel>

        <Frame Grid.Column="1" x:Name="PlannerFrame" Content=""  NavigationUIVisibility="Hidden"/>


    </Grid>
</Page>
